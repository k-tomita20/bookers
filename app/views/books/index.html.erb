<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<%= form_with model: @book do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

<% @books.each do |book| %>
 <p>Title</p>
 <span><%= book.title %></span>
 <p>Body</p>
 <span><%= book.body %></span>
 <span>
   <%= link_to "show", book_path(book.id) %>
 </span>
 <span>
   <%= link_to "edit", edit_book_path(book.id) %>
 </span>
 <span>
  <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか" %>
  </span>

<% end %>